<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}CRUD!{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    {% block stylesheets %}
    {% endblock %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</head>
<body class="bg-light">

<nav class="navbar navbar-dark navbar-expand-md sticky-top bg-dark p-0" style="padding-left: 400px;">
    <a class="navbar-brand col-sm-3 col-md-2 mr-0"  
       href="{{ path('index') }}">Crud App</a>
    <div class="w-100 order-1 order-md-0" style="margin-left: 200px;">
        <ul class="navbar-nav px-3">
            {% if is_granted('ROLE_USER') %}
                <div>{{ render(controller('App\\Controller\\EmpresaSelecionadaController::empresaSelecionada')) }}</div>

                <li class="nav-item text-nowrap">
                    <a class="nav-link" href="{{ path('empresa_index') }}">Empresa</a>
                </li>

                <li class="nav-item text-nowrap">
                    <a class="nav-link" href="{{ path('produtos') }}">Produtos</a>
                </li>

                <li class="nav-item text-nowrap">
                    <a class="nav-link" href="{{ path('vendedor_index') }}">Vendedores</a>
                </li>

                <li class="nav-item text-nowrap">
                    <a class="nav-link" href="{{ path('produto_pedido') }}">Pedidos</a>
                </li>
            {% endif %}
        </ul>
    </div>

    <div class="order-2 order-md-1">
        <ul class="navbar-nav px-3" style="margin-right: 400px;">
            {% if is_granted('ROLE_USER') %}
                <li class="nav-item text-nowrap">
                    <a class="nav-link"
                       href="#">{{ app.user.fullName }}</a>
                </li>
                <li class="nav-item text-nowrap">
                    <a class="nav-link"
                       href="{{ path('security_logout') }}">Sair</a>
                </li>
            {% else %}
                <li class="nav-item text-nowrap">
                    <a class="nav-link"
                       href="{{ path('security_login') }}">Entrar</a>
                </li>

                <li class="nav-item text-nowrap">
                    <a class="nav-link"
                       href="{{ path('user_register') }}">Registrar</a>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>

<main role="main" class="container">
    <div class="my-3 p-3 bg-white rounded box-shadow">
        {% block body %}
        {% endblock %}
    </div>
    
</main>
<script>
    $("#empresa-id").click(function() {
        var empresaId = $( "#empresa-master" ).val();
        alert('ID da Empresa: ' + empresaId);
});
    
</script>
{% block javascript %}
{% endblock %}
</body>
</html>