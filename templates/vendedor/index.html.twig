{% extends 'base.html.twig' %}

{% block title %}Vendedores Cadastrados{% endblock %}

	{% block stylesheets %}
		<style type="text/css">
			a{
				color: black;
				text-decoration: none;
			}

			a:hover{
				color: black;
				text-decoration: none;
			}

			tr:hover{
				background-color: #ccc !important; 
			}
		</style>
    {% endblock %}

{% block body %}

	<a class="nav-link btn btn-outline-primary" href="{{ path('vendedor_cadastro') }}" style="width: 15%; margin: 20px">Adicionar Vendedor</a>

	<table id="table" class="table table-striped">
		<tr>
			<th>Nome</th>
			<th>Empresa</th>
		</tr>
	{% for vendedor in vendedores %}
		<tr style="cursor: pointer;">
			<td>{{ vendedor.nome }}</td>
			<td>{{ vendedor.empresa }}</td>
		</tr>
	{% endfor %}
	</table>

{% endblock %}

{% block javascript %}
	<script type="text/javascript">
		$(document).ready(function() {
		    $('#table tr').click(function() {
		        var href = $(this).find("a").attr("href");
		        if(href) {
		            window.location = href;
		        }
		    });
		});
	</script>
{% endblock %}